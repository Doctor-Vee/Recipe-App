<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <title>Recipe App | Welcome</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="Email Messaging Site">
  <meta name="keywords" content="recipe, meals, snacks, ejs">
  <meta name="author" content="Victor CHINEWUBEZE">
  <link rel="stylesheet" type="text/css" media="screen" href="../UI/css/styles.css" />
  <link rel="shortcut icon" type="image/x-icon" href="../UI/img/smiley.png">
</head>

<body>
  <header>
    <div class="container">
      <div id="appName">
        <span class="open-slide">
          <a href="#" onclick="openSlideMenu()">
            <svg width="30" height="30">
              <path d="M0,5 30,5" stroke="#fff" stroke-width="5" />
              <path d="M0,14 30,14" stroke="#fff" stroke-width="5" />
              <path d="M0,23 30,23" stroke="#fff" stroke-width="5" />
            </svg>
          </a>

        </span>
        <h1 id="epic"><a href="/"><span class="highlight">Recipe </span>App</a></h1>
      </div>
      <nav>
        <ul>
          <a href="/">
            <li>Home</li>
          </a>
          <a href="/addrecipe">
            <li>Add Recipe</li>
          </a>
          <a href="#">
            <li class="current">View Recipes</li>
          </a>
        </ul>
      </nav>
    </div>
  </header>

  <div id="headerSpace"></div>

  <section id="index-side-bar">
    <aside class="side-bar" id="side-bar">
      <ul>
        <a href="#" class="close-btn" onclick="closeSlideMenu()">&times;</a>
        <a href="/">
          <li>Home</li>
        </a>
        <a href="/addrecipe">
          <li>Add Recipe</li>
        </a>
        <a href="#">
          <li class="current">View Recipes</li>
        </a>
      </ul>
    </aside>
  </section>

  <section class="container">
    <h2 class="highlight">View Recipes </h2>

    <div class="formBox">
      <form class="container" action="/search" method="GET">
        <p class="inputBox">
          <input type="text" name="search" id="search" required>
          <label for="reser">Type your word(s) here:</label>
        </p>
        <button type="submit">Search</button>
      </form>
    </div>

    <% recipes.forEach((item) => { %>
    <div class="results" id="results">
      <p><h3><%= item.name %> </h3> <hr />
        <b>Ingredients </b><br />
        <%= item.ingredients %><br /><br />
        <b>Directions </b><br />
        <%= item.directions %> <br />
      </p>
      <button class="small-button">Update</button>
      <button class="small-button delete-recipe" data-id="<%= item.id %>">Delete</button>
    </div>
    <% }); %>

  </section>
  <div id="headerSpace"></div>
  <footer>Recipe App, Copyright &copy; 2019</footer>
  <script src="http://code.jquery.com/jquery-1.12.0.min.js"></script>
  <script src="../UI/js/main.js"></script>
</body>

</html>